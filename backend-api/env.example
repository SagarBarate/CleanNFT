# Backend Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/cleannft?schema=public"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cleannft
DB_USER=postgres
DB_PASSWORD=postgres

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Blockchain Configuration
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
CONTRACT_ADDRESS=0x9732e6BB31742f9FA4fd650cE20aD595983B3651
ADMIN_PRIVATE_KEY=your_admin_wallet_private_key_here
ADMIN_WALLET_ADDRESS=0xAdminWallet
CHAIN_NETWORK=polygon-mumbai

# Pinata IPFS Configuration
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here
PINATA_GATEWAY_URL=

# App Configuration
APP_WEBSITE=https://cleannft-app.com
APP_NAME=CleanNFT Backend
APP_VERSION=1.0.0

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info